<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/estilo_fondo"
   >

    <TextView
        android:id="@+id/lblbuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblbuscar"
        android:textColor="@color/celeste"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/txtbuscarlistaVenta"
		android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblbuscar"
         android:background="@drawable/estilo_texto"
        android:textColor="@color/blanco"
        >
            <requestFocus />   
        </EditText>
               
    <ListView android:id="@+id/lstVentaLytlistaVenta" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtbuscarlistaVenta" 
        android:textColor="@color/celeste"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="@drawable/estilo_boton"
        />

</RelativeLayout>
