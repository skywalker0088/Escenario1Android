<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#e7ebb0"
   >
      
    <ListView android:id="@+id/lstproductoventaLylistaproductoventa" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     />
     <Button
        android:id="@+id/btnOklyl_listaproductoventa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lstproductoventaLylistaproductoventa"
        android:layout_centerHorizontal="true"
        android:text="@string/lblRegistrar" />

    <Button
        android:id="@+id/btnCancellyl_listaproductoventa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lstproductoventaLylistaproductoventa"
        android:layout_toRightOf="@id/btnOklyl_listaproductoventa"
        android:text="@string/lblCancelar" />
    

</RelativeLayout>
