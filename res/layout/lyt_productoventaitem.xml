<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" 
android:background="@drawable/estilo_fondo"
>

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:background="@drawable/estilo_boton"
	>

     <TextView
        android:id="@+id/txtProductolyproductoventaitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblProducto" 
        android:textColor="@color/celeste"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"  />
       

    <TextView
        android:id="@+id/txtcantidadlyproductoventaitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblCantidad" 
        android:layout_toRightOf="@id/txtProductolyproductoventaitem"
        android:textColor="@color/celeste"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"  />

     <TextView
        android:id="@+id/txtprecioUnitariolyproductoventaitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtProductolyproductoventaitem"
        android:text="@string/lblPrecioUnitario"
        android:textColor="@color/celeste"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"  />


     <TextView
        android:id="@+id/txtsubtotallyproductoventaitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtcantidadlyproductoventaitem"
        android:text="@string/lblSubtotal"
        android:layout_toRightOf="@id/txtprecioUnitariolyproductoventaitem"
        android:textColor="@color/celeste"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceSmall"
            />
</RelativeLayout>
</LinearLayout>
